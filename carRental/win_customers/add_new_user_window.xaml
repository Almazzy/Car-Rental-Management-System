        <TextBox x:Name="txt_pes" HorizontalAlignment="Left" Height="30" Margin="350,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontSize="16"/>
        <Label Content="pesel:" HorizontalAlignment="Left" Margin="351,308,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="355,320,0,0" VerticalAlignment="Top" Width="37" Background="#FF9ABF7F"/>
        <TextBox x:Name="txt_email" HorizontalAlignment="Left" Height="30" Margin="350,417,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="16"/>
        <Label Content="email:" HorizontalAlignment="Left" Margin="351,386,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="355,398,0,0" VerticalAlignment="Top" Width="37" Background="#FF9ABF7F"/>
        <TextBox x:Name="txt_nip" HorizontalAlignment="Left" Height="30" Margin="518,417,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="16"/>
        <Label Content="nip:" HorizontalAlignment="Left" Margin="520,386,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="524,398,0,0" VerticalAlignment="Top" Width="23" Background="#FF9ABF7F"/>
        
        <Label Content="adres zameldowania:" HorizontalAlignment="Left" Margin="9,385,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="13,398,0,0" VerticalAlignment="Top" Width="139" Background="#FF9ABF7F"/>
    </Grid>
</Window>
