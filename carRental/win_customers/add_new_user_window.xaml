        <Separator HorizontalAlignment="Left" Height="26" Margin="13,241,0,0" VerticalAlignment="Top" Width="57" Background="#FF9ABF7F"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="13,320,0,0" VerticalAlignment="Top" Width="78" Background="#FF9ABF7F"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="13,163,0,0" VerticalAlignment="Top" Width="69" Background="#FF9ABF7F"/>
        <Label HorizontalContentAlignment="Center" Content="uzupelnij informacje i dodaj klienta" HorizontalAlignment="Left" Margin="21,53,0,0" VerticalAlignment="Top" FontSize="25" Foreground="White" FontFamily="Perpetua Titling MT" Width="643"/>
        <Label Content="3" HorizontalAlignment="Left" Margin="1002,118,0,0" VerticalAlignment="Top" FontSize="15" Foreground="Black" FontFamily="Perpetua Titling MT" Width="20" Height="28"/>
        <Button x:Name="btn_add" HorizontalAlignment="Left" Margin="274,515,0,0" VerticalAlignment="Top" Width="390" Height="39" Background="#FF7FB1BF" BorderBrush="Black" FontFamily="Perpetua Titling MT" Content="D O D A J  K L I E N T A" Foreground="White" FontSize="18" Click="Btn_add_Click"/>
        <Button x:Name="btn_exit" HorizontalAlignment="Left" Margin="61,515,0,0" VerticalAlignment="Top" Width="70" Height="39" Background="#FFBF7F7F" BorderBrush="Black" FontFamily="Perpetua Titling MT" Content="anuluj" Foreground="White" Click="Btn_exit_Click"/>
        <Button x:Name="btn_refresh" HorizontalAlignment="Left" Margin="136,515,0,0" VerticalAlignment="Top" Width="70" Height="39" Background="#FF7FB1BF" BorderBrush="Black" FontFamily="Perpetua Titling MT" Content="ODŚWIEŻ" Foreground="White" Click="Btn_refresh_Click"/>
        <Image Source="/carRental;component/pic/add_o_user.png" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="51" Margin="5,515,0,0"/>
        <Separator HorizontalAlignment="Left" Height="14" Margin="31,528,0,0" VerticalAlignment="Top" Width="46" Background="White" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.289"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
