        <TextBox x:Name="txt_no_d" HorizontalAlignment="Left" Height="30" Margin="518,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="16"/>
        <Label Content="nr dowodu:" HorizontalAlignment="Left" Margin="520,151,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="524,163,0,0" VerticalAlignment="Top" Width="73" Background="#FF9ABF7F"/>
        <TextBox x:Name="txt_number1" HorizontalAlignment="Left" Height="30" Margin="350,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="16"/>
        <Label Content="nr telefonu 1:" HorizontalAlignment="Left" Margin="351,229,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="355,241,0,0" VerticalAlignment="Top" Width="83" Background="#FF9ABF7F"/>
        <TextBox x:Name="txt_number2" HorizontalAlignment="Left" Height="30" Margin="518,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="16"/>
        <Label Content="nr telefonu 2:" HorizontalAlignment="Left" Margin="520,229,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
