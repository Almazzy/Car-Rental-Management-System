        <ComboBox x:Name="combo_type" HorizontalAlignment="Left" Margin="7,182,0,0" VerticalAlignment="Top" Width="326" BorderBrush="White" Height="31" FontSize="16">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="txt_naj" HorizontalAlignment="Left" Height="32" Margin="7,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontSize="16"/>
        <TextBox x:Name="txt_cl" HorizontalAlignment="Left" Height="31" Margin="7,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontSize="16"/>
        <TextBox x:Name="txt_address" HorizontalAlignment="Left" Height="74" Margin="7,417,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontSize="16"/>
        <Label Content="najemca:" HorizontalAlignment="Left" Margin="9,229,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>

        <Label Content="użytkownik:" HorizontalAlignment="Left" Margin="9,307,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
