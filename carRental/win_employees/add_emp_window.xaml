        <Label Content="3" HorizontalAlignment="Left" Margin="1002,118,0,0" VerticalAlignment="Top" FontSize="15" Foreground="Black" FontFamily="Perpetua Titling MT" Width="20" Height="28"/>
        <Button x:Name="btn_add" HorizontalAlignment="Left" Margin="62,571,0,0" VerticalAlignment="Top" Width="368" Height="39" Background="#FF7FB1BF" BorderBrush="Black" FontFamily="Perpetua Titling MT" Content="D O D A J  p r a c o w n i k a" Foreground="White" FontSize="18" Click="Btn_add_Click"/>

        <Label Content="zatrudniony dnia:" HorizontalAlignment="Left" Margin="17,384,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="21,397,0,0" VerticalAlignment="Top" Width="114" Background="#FF9ABF7F"/>
        <DatePicker x:Name="date_od" HorizontalAlignment="Left" Margin="20,417,0,0" VerticalAlignment="Top" Height="24" Width="208"/>
        <ComboBox x:Name="combo_s" HorizontalAlignment="Left" Margin="264,417,0,0" VerticalAlignment="Top" Width="208" BorderBrush="White" Height="24" FontSize="16">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="stanowisko:" HorizontalAlignment="Left" Margin="261,384,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="265,397,0,0" VerticalAlignment="Top" Width="74" Background="#FF9ABF7F"/>
        <Separator HorizontalAlignment="Left" Height="20" Margin="24,454,0,0" VerticalAlignment="Top" Width="448"/>
