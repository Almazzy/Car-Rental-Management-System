        <TextBox x:Name="txt_no" HorizontalAlignment="Left" Height="31" Margin="20,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452" FontSize="16"/>
        <Label Content="pesel:" HorizontalAlignment="Left" Margin="17,227,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>

        <Label Content="nr telefonu:" HorizontalAlignment="Left" Margin="17,306,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
