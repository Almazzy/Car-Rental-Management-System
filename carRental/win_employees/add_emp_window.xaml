        <Label Content="login:" HorizontalAlignment="Left" Margin="17,480,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="21,493,0,0" VerticalAlignment="Top" Width="34" Background="#FF9ABF7F"/>
        <TextBox x:Name="txt_password" HorizontalAlignment="Left" Height="32" Margin="264,513,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" FontSize="16"/>
        <Label Content="hasło:" HorizontalAlignment="Left" Margin="261,480,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Rockwell Nova Light"/>
        <Separator HorizontalAlignment="Left" Height="26" Margin="265,493,0,0" VerticalAlignment="Top" Width="36" Background="#FF9ABF7F"/>
